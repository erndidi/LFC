@model LFC.Models.Contact

<div class="container">
    <div class="bg-faded p-4 my-4">

        <hr class="divider">
        <div class="row">
           
            <div class="col-lg-12">
                <form class="well form-horizontal blueBox" style="font-family:Josefin Slab, Helvetica Neue, Helvetica, Arial, sans-serif"; action="~/Contact/SendEmail" method="post" id="contact_form" enctype="multipart/form-data">
                    <fieldset>

                        <!-- Form Name -->
                        <legend style="font-weight:bold">For best results, think 'What, When, Who' when filling in the project description."</legend>
                        <ul>
                            <li>What-what are trying to sell. The more I know about it, the better.</li>
                            <li>Who-customer demographics. Again, the more I know about it, the better.</li>
                            <li>When-deadline(s).</li>

                        </ul>

                        <!-- Text input-->

                        <div class="form-group">

                            <div class="inputGroupContainer">
                                <div class="input-group">
                                    <span class="input-group-addon"><i class="glyphicon glyphicon-user"></i></span>
                                   @Html.TextBoxFor(m => m.FirstName, new { @placeholder = "First Name", @class = "form-control", @minlength = 2 });
                                </div>
                            </div>
                        </div>

                        <div class="form-group">

                            <div class="inputGroupContainer">
                                <div class="input-group">
                                    <span class="input-group-addon"><i class="glyphicon glyphicon-user"></i></span>
                                   @Html.TextBoxFor(m => m.LastName, new { @placeholder = "Phone", @class = "form-control", @minlength = 2 });
                                </div>
                            </div>
                        </div>

                        <!-- Text input-->
                        <div class="form-group">

                            <div class="inputGroupContainer">
                                <div class="input-group">
                                    <span class="input-group-addon"><i class="glyphicon glyphicon-envelope"></i></span>
                                    @Html.TextBoxFor(m => m.EmailAddress, new { @placeholder = "Email", @class = "form-control", @minlength = 2, @type="email" });
                                   
                                </div>
                            </div>
                        </div>


                        <!-- Text input-->

                        <div class="form-group">

                            <div class="inputGroupContainer">
                                <div class="input-group">
                                    <span class="input-group-addon"><i class="glyphicon glyphicon-earphone"></i></span>
                                    @Html.TextBoxFor(m => m.Phone, new { @placeholder = "845-222-1111", @class = "form-control", @minlength = 2, @type = "phone" });
                                </div>
                            </div>
                        </div>



                        <!-- Text input-->
                     



                        <div class="form-group">

                            <div class="inputGroupContainer">
                                <div class="input-group">
                                    <span class="input-group-addon"><i class="glyphicon glyphicon-pencil"></i></span>
                                    @Html.TextAreaFor(m => m.Message, new { @placeholder = "What, when, who", @class = "form-control", @minlength = 2, @type = "phone", @row = 50 });
                                </div>
                            </div>
                        </div>

                        <!-- Success message -->
                        <div class="alert alert-success" style="display:none" role="alert" id="success_message">Success <i class="glyphicon glyphicon-thumbs-up"></i> Thanks for contacting us, we will get back to you shortly.</div>

                        <!-- Button -->
                        <div class="form-group">
                            <label class="col-md-4 control-label"></label>
                            <div class="col-md-4">
                                <button type="submit" class="btn btn-warning">Send <span class="glyphicon glyphicon-send"></span></button>
                            </div>
                        </div>


                    </fieldset>
                </form>

            </div>
        </div>
    </div>



</div>
<script src="~/Scripts/jquery.validate.min.js"></script>

<script type="text/javascript">
    $(document).ready(function () {


        $('#contactForm').validate({
            rules: {
                name: "required",
                email: "required",
                subject: "required",
                message: "required"
            },
            messages: {
                name: "At least a first name, please.",
                email: "Please enter a valid email where I can reach you.",
                subject: "Subject required.",
                message: "Please tell me briefly what I can do for you. "
            }
        });


    });




</script>
