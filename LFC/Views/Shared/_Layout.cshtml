    <div id="divSecHeadline" style="display:none">
        Email Marketing, Software Copywriting,White Papers, Will Work on Spec, Tell Story
    </div>


    <script type="text/javascript">
        var secondHeadTxt = $('#divSecHeadline').text().split(',');
        var lastUsed = secondHeadTxt.length + 1;;
        var idx = GetRand();
        $(document).ready(function () {
            ShowSecondHeadline();
        });

        function ShowSecondHeadline() {
            idx = GetRand();           
            $('#secHeadLine').text(secondHeadTxt[idx]);
                $('#secHeadLine').fadeIn(2000, function () {
                    $('#secHeadLine').fadeOut(2000, function () {
                        lastUsed = idx;
                        ShowSecondHeadline();
                    })
                });
        }

        function GetRand() {
            return Math.floor(Math.random() * (secondHeadTxt.length - 1));
        }
        
    </script>
